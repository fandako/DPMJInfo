<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".debug.MapKey">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mapKeyText"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/labelTextView"
        android:textSize="18sp"
        android:text="Mapa zobrazuje aktuální polohu vozidel MHD v Jihlavě. Kliknutím na vozidlo se vám zobrazí informace o směru a případném zpoždění. Po přiblížení mapy se zobrazí také zastávky, u kterých je možné zjistit aktuální odejzdy (pro oba směry)." />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/busIcon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/mapKeyText"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:src="@drawable/bus"
        android:rotation="90" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/trolleybusIcon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/busIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:src="@drawable/trolleybus"
        android:rotation="90" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/waitingIcon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toBottomOf="@id/trolleybusIcon"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:src="@drawable/waiting"
        android:rotation="90" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/busText"
        app:layout_constraintTop_toBottomOf="@id/mapKeyText"
        app:layout_constraintStart_toEndOf="@id/busIcon"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        style="@style/labelTextView"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:text="autobus"
        android:gravity="center"
        android:layout_marginStart="15dp" />

    <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/trolleybusText"
    app:layout_constraintTop_toBottomOf="@id/busText"
    app:layout_constraintStart_toEndOf="@id/trolleybusIcon"
    android:layout_width="wrap_content"
    android:layout_height="45dp"
    style="@style/labelTextView"
    android:textSize="18sp"
    android:layout_marginTop="15dp"
    android:text="trolejbus"
    android:gravity="center"
    android:layout_marginStart="15dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/waitingText"
        app:layout_constraintTop_toBottomOf="@id/trolleybusText"
        app:layout_constraintStart_toEndOf="@id/waitingIcon"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        style="@style/labelTextView"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:text="čekající vozidlo"
        android:gravity="center"
        android:layout_marginStart="15dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/credits"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/labelTextView"
        android:textSize="18sp"
        android:text="Vytvořeno ve spolupráci s\nDopravním podnikem města Jihlavy a.s.\na\nodborem informatiky\nStatutárního města Jihlava"
        android:gravity="center"
        android:layout_marginStart="15dp" />

</androidx.constraintlayout.widget.ConstraintLayout>