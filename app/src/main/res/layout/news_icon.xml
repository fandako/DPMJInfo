<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/articlesLayout"
    android:layout_width="48dp"
    android:layout_height="48dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/newsIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:clickable="true"
        android:src="@drawable/info_icon2"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/articles_title"
        android:layout_margin="8dp"
        />

    <!-- Menu Item Image -->
    <ImageView
        android:id="@+id/newsCountBackground"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:clickable="true"
        android:src="@drawable/news_count_background"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/articles_title"
        android:visibility="invisible"
        />

    <!-- Badge Count -->
    <TextView
        app:layout_constraintTop_toTopOf="@id/newsCountBackground"
        app:layout_constraintBottom_toBottomOf="@id/newsCountBackground"
        app:layout_constraintStart_toStartOf="@id/newsCountBackground"
        app:layout_constraintEnd_toEndOf="@id/newsCountBackground"
        android:id="@+id/newsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="#fff"
        android:clickable="false"
        android:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>
